<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar" />

    <style name="default_screen" parent="Theme.Design.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">#FFFFFF</item>
        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="statusBarBackground">#FFFFFF</item>
        <item name="android:statusBarColor">#FFFFFF</item>
    </style>

    <style name="bottom_dialog" parent="Theme.Design.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">#A0000000</item>
        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
        <item name="statusBarBackground">#004A8E</item>
        <item name="android:statusBarColor">#004A8E</item>
    </style>

    <style name="toolBarStyle" parent="Widget.AppCompat.Toolbar">
    <item name="android:textSize">16dp</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Text" parent="@android:style/Widget.TextView">
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Header" parent="Text">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="Header.Medium" parent="Header">
        <item name="fontFamily">sans-serif-condensed-medium</item>
    </style>

    <style name="Title" parent="Text">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Title.Medium" parent="Title">
        <item name="fontFamily">sans-serif-condensed-medium</item>
    </style>

    <style name="Body1" parent="Text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Body1.Medium" parent="Body1">
        <item name="fontFamily">sans-serif-condensed-medium</item>
    </style>

    <style name="Body2" parent="Text">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Body2.Medium" parent="Body2">
        <item name="fontFamily">sans-serif-condensed-medium</item>
    </style>

    <style name="Body3" parent="Text">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Body3.Medium" parent="Body3">
        <item name="fontFamily">sans-serif-condensed-medium</item>
    </style>

</resources>