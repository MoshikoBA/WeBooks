<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar" />

    <style name="default_screen" parent="Theme.Design.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">#FFFFFF</item>
        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="statusBarBackground">#FFFFFF</item>
        <item name="android:statusBarColor">#FFFFFF</item>
    </style>

    <style name="bottom_dialog" parent="Theme.Design.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">#A0000000</item>
        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
        <item name="statusBarBackground">#004A8E</item>
        <item name="android:statusBarColor">#004A8E</item>
    </style>

    <style name="toolBarStyle" parent="Widget.AppCompat.Toolbar">
    <item name="android:textSize">16dp</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:textColor">@android:color/black</item>
    </style>

</resources>